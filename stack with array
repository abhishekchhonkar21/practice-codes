#include <iostream>

using namespace std;

const int max_size = 100;

class stack{
    int arr[max_size];
public:
    int top;
    stack(){
        top = -1;
    }
  
    bool Isfull(){
        return top == max_size - 1;
    }
    bool isEmpty(){
        return top == -1;
    }
    
    void push(int data){
        if(Isfull()){
            cout<<"stack is full "<<endl;
            return;
        }
        top++;
        arr[top] = data;
        
    }
    int pop(){
        if(isEmpty()){
            cout<<"the stack is empty "<<endl;
            return -1;
            
        }
        
        return arr[top--];
        
    }
    
    int stackTop(){
        return top;
    }
    int peek(){
        if(isEmpty()){
            cout<<"the stack is empty "<<endl;
            return -1;
        }
        return arr[top];
    }
    
    void display(){
        if(isEmpty()){
            cout<<"the stack is empty "<<endl;
            return ;
        }
        
        cout<<"element of stack are "<<endl;
        for(int i=0; i<=top; i++){
            cout<<arr[i]<<" ";
        }
    }
};

int main(){
    
    stack s;
    
    s.push(10);
    s.push(20);
    s.push(30);
    s.push(40);
    s.push(50);
    s.pop();
    s.pop();
    s.push(100);
    s.push(11);
    
    cout<<s.peek()<<endl;
    cout<<s.stackTop()<<endl;
    s.display();
}
