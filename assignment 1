//computes and returns the sum of all the integers between "first" and "last" inclusive.

#include <iostream>

using namespace std;
int sumAll(int first, int last){
    int sum=0;
    int i;
  
    for( i=first; i<=last; i++){
        sum=sum+i;
    }
    return sum;
}

int main()
{
    int a,b;
    
    cin>>a>>b;
   
    cout<<"the sum is "<<sumAll(a,b);
    return 0;
}

//computes and returns the smallest positive integer n for which 1+2+3+...+n equals or exceeds the value of "goal".

#include <iostream>

using namespace std;
int func(int goal){
    
    int n=0;
    int sum=0;
    for(int i=1;i<goal; i++){
        sum= i+sum;
        n++;
        if(sum>=goal){
            break;
        }
    }
    return n;
}

int main()
{
    int a;
    
    cin>>a;
   
    cout<<func(a);
    return 0;
}

//computes and returns the greatest common divisor (g.c.d.) of the arguments passed to it.
#include <iostream>

using namespace std;
int gcd(int x, int y){
    int a,b;
    if(x>=y){
        a=x;
        b=y;
    }
    else{
        a=y;
        b=x;
    }
    int ans;
    for(int i=1; i<b; i++){
        if(a%i==0 and b%i==0){
            ans =i;
        }
    }
    return ans;
    
}

int main()
{
    int n1,n2;
    cin>>n1>>n2;
    cout<<"gcd of the two number is"<<gcd(n1,n2);
    return 0;
}

//determine wether a integer is prime or not

#include <iostream>

using namespace std;
int primeCheck(int x){
    
    for(int i=2; i<x; i++){
        if(x%i==0){
            return -1;
        }
    }
    
    return 1;
}

int main()
{
    int n;
    cin>>n;
    if(primeCheck(n)==1){
        cout<<"the number is prime number";
    }
    else{
        cout<<"the number is not a prime number";
    }
    return 0;
}

