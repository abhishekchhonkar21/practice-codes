return 0;
}

//reverse the order of the objects in an array
#include <iostream>
using namespace std;

void reverse(int arr[], int n){
 
    int start = 0;
    int end = n-1;
    while(start<end){
        int temp = arr[start];
            arr[start] = arr[end];
            arr[end] = temp;
        start++; end--;
    }
    
}

int main()
{
    int size;
    cin>>size;
    
    int arr[size];
    
    for(int i=0; i<size; i++){
        cin>>arr[i];
    }
    reverse(arr,size);
    
    for(int i=0; i<size; i++){
        cout<<arr[i];
    }
}

//find the index of the largest number in the array
#include <iostream>
using namespace std;

int index(int arr[], int n){
    int idx;
    int max = arr[0];
    for(int i=0; i<n; i++){
        if(arr[i]>max){
            max=arr[i];
        }
    }
    for(int i=0; i<n; i++){
        if(arr[i] == max){
            idx=i;
        }
    }
    return idx;
}

int main()
{
    int size;
    cin>>size;
    
    int arr[size];
    
    for(int i=0; i<size; i++){
        cin>>arr[i];
    }
   
    cout<<"the index is "<<index(arr,size);
}

//move the content to the next position of the array and put last element at first position
#include <iostream>
using namespace std;

void rotate(int arr[], int n){
    int temp = arr[n-1];
    for(int i=n-2; i>=0; i--){
        arr[i+1]=arr[i];
    }
    arr[0]=temp;
}

int main()
{
    int size;
    cin>>size;
    
    int arr[size];
    
    for(int i=0; i<size; i++){
        cin>>arr[i];
    }
    rotate(arr,size);
    cout<<"the rotated array  is "<<endl;
    
    for(int i=0; i<size; i++){
        cout<<arr[i];
    }
}

//examine an array of integers and eliminates all duplication of values. the distinct integer are all move to the left part of the array



//copy two array in a third array
#include <iostream>
using namespace std;

int main()
{
    int a,b;
    cin>>a>>b;
    
    int arr1[a];
    int arr2[b];
    int arr3[a+b];
    
    for(int i=0; i<a; i++){
        cin>>arr1[i];
    }
    for(int i=0; i<b; i++){
        cin>>arr2[i];
    }
    
    for(int i=0; i<a; i++){
        
        arr3[i]=arr1[i];
    }
    for(int i=a; i<a+b; i++){
        
        arr3[i]=arr2[i-a];
    }
    for(int i=0; i<a+b; i++){
        
        cout<<arr3[i];
    }
}

//write a program to find sum of all elements into a third array; write a program to find maximum of elements of an array; write a program for linear search of array
#include <iostream>
using namespace std;
int sum(int arr[], int n){
    int sum =0;
    for(int i=0; i<n; i++){
        sum=sum+arr[i];
    }
    return sum;
}

int maxNum(int arr[],int n){
    int max=arr[0];
    for(int i=0; i<n; i++){
        if(arr[i]>max){
            max=arr[i];
        }
    }
    return max;
}
int linearSearch(int arr[], int n, int x){
    for(int i=0; i<n; i++){
        if(arr[i]==x){
            return i;
        }
    }
    return -1;
}
int main()
{
    int a,k;
    cin>>a;
    cin>>k;
    int arr1[a];
    
    for(int i=0; i<a; i++){
        cin>>arr1[i];
    }
    cout<<"sum of all elements is "<<sum(arr1,a)<<endl;;
    cout<<"largest element is "<<maxNum(arr1, a)<<endl;
   
    int t = linearSearch(arr1, a, k);
    
    if(t==-1){
        cout<<"the number is not in the array";
    }
    else{
        cout<<"the number exist in the array at the index "<<t;
    }
}


//write a program for adding and substracting matrices using 2D arrays
#include <iostream>
using namespace std;

int main()
{
    int x,y;
    cin>>x>>y;
    int arr1[x][y];
    int arr2[x][y];
    int sum[x][y];
    int sub[x][y];
    for(int i=0; i<x; i++){
        for(int j=0; j<y; j++){
            cin>>arr1[i][j];
        }}
        for(int i=0; i<x; i++){
            for(int j=0; j<y; j++){
                cin>>arr2[i][j];
            }
    }
        for(int i=0; i<x; i++){
            for(int j=0; j<y; j++){
                sum[i][j]=arr2[i][j]+arr1[i][j];
            }}
            for(int i=0; i<x; i++){
                for(int j=0; j<y; j++){
                    sub[i][j]=arr2[i][j]-arr1[i][j];
                }}
    
                for(int i=0; i<x; i++){
                    for(int j=0; j<y; j++){
                        cout<<sum[i][j];
                    }}
                    
                    cout<<endl;
                    
                    for(int i=0; i<x; i++){
                        for(int j=0; j<y; j++){
                            cout<<sub[i][j];
                        }}
                        cout<<endl;
                        
                        return 0;
                        
}
write a program to multiply matrices of 10*10
#include <iostream>
using namespace std;

int main()
{
    int x=10; int y=10;
    int arr1[x][y];
    int arr2[x][y];
    int pro[x][y];
    
    for(int i=0; i<x; i++){
        for(int j=0; j<y; j++){
            cin>>arr1[i][j];
        }}
        for(int i=0; i<x; i++){
            for(int j=0; j<y; j++){
                cin>>arr2[i][j];
            }
    }
        
            for(int i=0; i<x; i++){
                for(int j=0; j<y; j++){
                    pro[i][j]=arr2[i][j]*arr1[i][j];
                }}
    
                for(int i=0; i<x; i++){
                    for(int j=0; j<y; j++){
                        cout<<pro[i][j]<<" ";
                    }}
                    
                   
                        cout<<endl;
                        
                        return 0;
                        
}


//write a function for linear search using function

#include <iostream>
using namespace std;

int linearSearch(int arr[], int n, int x){
    for(int i=0; i<n; i++){
        if(arr[i]==x){
            return i;
        }
    }
    return -1;
}

int main()
{
    int a,k;
    cin>>a>>k;
    int arr1[a];
    for(int i=0; i<a; i++){
        cin>>arr1[i];
    }
         
    
    int t = linearSearch(arr1, a, k);
        
        if(t==-1){
            cout<<"the number is not in the array";
        }
        else{
            cout<<"the number exist in the array at the index "<<t;
        }
    }


//write a class for a rectangle. create objects for this class and call the member functions to find the area and perimeter of the rectangle
#include <iostream>
using namespace std;

class rectangle{
public:
    int length;
    int breadth;

    
    void set(int l, int b){
        length = l;
        breadth = b;
    };
    
    int area(){
        return length*breadth;
    };
    int  perimeter(){
        return 2*(length+breadth);
    };
};

int main()
{
    rectangle obj;
    obj.set(3,4);
    int x = obj.area();
    int y = obj.perimeter();
    cout<<"area of the rectangle is "<<x<<endl;
    cout<<"perimeter of the reactangle is "<<y<<endl;
}
    







